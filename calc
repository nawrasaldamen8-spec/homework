namespace Calc
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private float Operation(TextBox Number1, TextBox Number2, string op) {
            if (op == "+")
            {
                return float.Parse(Number1.Text) + float.Parse(Number2.Text);
            }
            else if (op == "-")
            {
                return float.Parse(Number1.Text) - float.Parse(Number2.Text);
            }
            else if (op == "x")
            {
                return float.Parse(Number1.Text) * float.Parse(Number2.Text);
            }
            else if (op == "รท")
            {
                return float.Parse(Number1.Text) / float.Parse(Number2.Text);
            }
          return 0;
        }
        private void label2_Click(object sender, EventArgs e)
        {

        }

        private void label1_Click(object sender, EventArgs e)
        {

        }

        private void button1_Click(object sender, EventArgs e)
        {
            textBox3.Text = Operation(textBox1,textBox2,button1.Text).ToString();
        }

        private void button2_Click(object sender, EventArgs e)
        {
            textBox3.Text = Operation(textBox1,textBox2,button2.Text).ToString();
        }

        private void button3_Click(object sender, EventArgs e)
        {
            textBox3.Text = Operation(textBox1,textBox2,button3.Text).ToString();
        }

        private void button4_Click(object sender, EventArgs e)
        {
            textBox3.Text = Operation(textBox1,textBox2,button4.Text).ToString();
        }
    }
